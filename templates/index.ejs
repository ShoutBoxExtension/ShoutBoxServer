<!-- Wrapper -->
<section id="wrapper">

	<!-- Sign In and Send off -->
		<section id="one" class="wrapper spotlight style1">
			<div class="inner">
					
			<% if (!user) { %>

				<a href="#" class="image"><img src="/img/basketball.png" alt="" /></a>
				<div class="content">
					<h2 class="major">Get Started</h2>
					<p>To start tweeting using the Chrome address bar, simply sign into Twitter by clicking the Sign In button below. ShoutBox will make tweeting from your computer faster and easier.</p>
					<a href="/auth/twitter" class="special">Sign in</a>
				</div>
				
			<% } else { %>

				<a href="#" class="image"><img src="/img/basketball.png" alt="" /></a>
				<div class="content">
					<h2 class="major">Continue</h2>
					<p>Hello @<%= user.username %>, thank you for signing in.<br/>
					To begin tweeting, type "@" in Chrome's address bar and tap your spacebar.<br/>
					You can now close this page. Happy Tweeting! </p>
					<a href="/logout" class="special">Log out</a>
				</div>

			<% } %>

			</div>
		</section>

